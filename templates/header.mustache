{{!
    @template theme_hsfk/header
}}


{{#is_site_admin}}
  <div class="header__admin navbar">
    {{> theme_boost/navbar }}
  </div>
{{/is_site_admin}}

<header id="header" class="site__header {{#is_site_admin}}is-admin{{/is_site_admin}}">
  <div class="header__top">
    <div id="logo">
      <a href="{{{ config.wwwroot }}}">
        {{> theme_hsfk/logo}}
      </a>
    </div>

    <div class="header__search">
      <form action="{{{ search_action }}}" method="get">
        <input type="text" placeholder="Search learning units" name="search" value="">
        <button type="submit">
          Search
          <i class="fa-solid fa-search fa-1x" aria-hidden="true"></i>
        </button>
      </form>
    </div>

  </div>
  <div class="header-main-menubar">
    <nav class="nav__main navbar navbar-expand-md">
      <button class="navbar-toggler" data-toggle="collapse" data-target="#navbar-items" aria-controls="navbar-items" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
        Menu
      </button>
      <a href="{{{ config.wwwroot }}}" class="navbar-brand"><img src="{{{ logo_nav_url }}}" width="40" height="40" alt="Small logo"></a>
      <div id="navbar-items" class="collapse navbar-collapse">
        <ul class="nav__items navbar-nav">
          {{{ custom_menu }}}
        </ul>
      </div>
      <ul class="nav pull-right">
        {{#is_logged_in}}
          <li class="navbar-text">
            <span class="logininfo">You are logged in as <strong>{{{ user.firstname}}} {{{ user.lastname}}}</strong>
            </span>
          </li>
          <li><a href="{{{config.wwwroot}}}/login/logout.php?sesskey={{{user.sesskey}}}">Logout</a></li>
        {{/is_logged_in}}
      </ul>
    </nav>
  </div>
</header>