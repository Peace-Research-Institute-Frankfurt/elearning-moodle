{{!
    @template theme_hsfk/footer
}}


<footer class="home__footer">
  <div class="footer__inner ">
    <div class="footer__menus">

      <div class="footer__section">
        <h5>Links</h5>
        <ul class="footer__menu">
          <li>
            <a href="https://www.nonproliferation.eu/">
              <em>EUNPDC</em>
              <span>Consortium Homepage</span>
            </a>
          </li>
          <li>
            <a href="https://prif.org">
              <em>HSFK/PRIF</em>
              <span>Lead institution homepage</span>
            </a>
          </li>
          <li>
            <a href="https://prif.org">
              <em>Teaching Resources</em>
              <span>Materials to facilitate non-proliferation and disarmament education in universities</span>
            </a>
          </li>
        </ul>
      </div>

      <div class="footer__section">
        <h5>Contact</h5>
        <p>{{{ theme_settings.address }}}</p>
        <a href="mailto:{{{ theme_settings.email }}}">{{{ theme_settings.email }}}</a>
